<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XMStrokeTextView">
        <attr name="innerColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SmoothMarqueeRecyclerView">
        <attr name="smooth_distance" format="integer" />
        <attr name="smooth_timemillis" format="integer" />
        <attr name="smooth_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>